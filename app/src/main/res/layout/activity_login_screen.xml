<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3039"
    android:orientation="vertical"
    tools:context="com.balkhiz.mrng.LoginScreen2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_weight=".8"
        android:background="#181f29">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp"
            android:paddingLeft="10dp"
            android:paddingRight="35dp"
            android:paddingTop="30dp"
            android:text="     REGISTRATION"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"

            />
        <ImageButton
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="31dp"
            android:layout_marginStart="18dp"
            android:background="#181f29"
            android:src="@drawable/ic_facebook_logo_button" />

        <ImageButton
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="26dp"
            android:background="#181f29"
            android:contentDescription="TODO"
            android:src="@drawable/ic_google_plus_logo_button"
            tools:ignore="DuplicateIds" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">


        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/view3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="@drawable/button"
            android:fontFamily="Loto Bold"
            android:text="LOGIN"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="13dp"
            android:text="Not a member?"
            android:clickable="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginLeft="203dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="13dp"
            android:onClick="onClick"
            android:text="Signup"
            android:textColor="#e8c778" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Email"
            android:fontFamily="@assets/Lato-Light"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <View
            android:id="@+id/view2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/editText3"
            android:layout_alignStart="@+id/editText3"
            android:layout_marginBottom="7dp"
            android:background="@android:color/black" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText3"
            android:layout_below="@+id/editText3"
            android:layout_marginTop="27dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Password"
            android:fontFamily="@assets/Lato-Light"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <View
            android:id="@+id/view3"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_alignStart="@+id/editText4"
            android:layout_below="@+id/editText4"
            android:background="@android:color/black" />

    </RelativeLayout>
</LinearLayout>
