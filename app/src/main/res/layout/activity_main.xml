<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    tools:context="com.balkhiz.mrng.MainActivityScreen3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight=".8"
        android:background="#181f29">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp"
            android:paddingLeft="10dp"
            android:paddingRight="35dp"
            android:paddingTop="30dp"
            android:text="     REGISTRATION"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView"
            android:layout_marginBottom="31dp"
            android:layout_marginStart="18dp"
            android:background="#181f29"
            android:src="@drawable/ic_facebook_logo_button" />

        <ImageButton
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="26dp"
            android:background="#181f29"
            android:contentDescription="TODO"
            android:src="@drawable/ic_google_plus_logo_button"
            tools:ignore="DuplicateIds" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2c3039"
        android:layout_weight=".5">


        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-9dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Username"
            android:fontFamily="@assets/Lato-Light"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <View
            android:id="@+id/view"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_above="@+id/editText2"
            android:layout_alignStart="@+id/editText"
            android:background="@android:color/black" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/editText"
            android:layout_below="@+id/editText"
            android:layout_marginTop="17dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Email"
            android:fontFamily="@assets/Lato-Light"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="-9dp"
            android:layout_alignStart="@+id/editText2"
            android:layout_below="@+id/editText2"
            android:background="@android:color/black"
            android:id="@+id/view4" />


        <Button
            android:id="@+id/signup"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editText5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/button"
            android:fontFamily="Loto Bold"
            android:text="SIGNUP"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="12dp"
            android:text="Already a member?"
            android:clickable="true"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup"
            android:layout_marginLeft="208dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:onClick="onClick"
            android:text=" Login"
            android:textColor="#e8c778" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/view5"
            android:layout_below="@+id/view4"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:fontFamily="@assets/Lato-Light"/>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="-9dp"
            android:layout_alignStart="@+id/editText2"
            android:layout_below="@+id/editText5"
            android:background="@android:color/black"
            android:id="@+id/view5" />


    </RelativeLayout>

</LinearLayout>

