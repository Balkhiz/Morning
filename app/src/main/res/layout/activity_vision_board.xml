<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3039"
    android:orientation="vertical"
    tools:context="com.balkhiz.mrng.VisionBoardScreen6">


    <ImageButton
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="43dp"
        android:background="#2c3039"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="325dp"
        app:srcCompat="@drawable/ic_backward_arrow" />

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-25dp"
        android:background="#2c3039"
        app:srcCompat="@drawable/ic_attention_sign_outline" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="-20dp"
        android:text="Vision Board"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_gravity="center"
        android:background="#2c3039"
        app:srcCompat="@drawable/ic_pluse_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Create your subconscious vision board"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By adding images"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</LinearLayout>
