<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reminder_screen10a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#2c3039"


tools:context="com.balkhiz.mrng.ReminderScreen10a">


    <ListView

        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="41dp"
        android:layout_toStartOf="@+id/image3"
        android:background="@drawable/button"
        android:text="DONE" />


    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Wakeup music"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


    <ImageButton

        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview"
        android:layout_alignStart="@+id/listview"
        android:layout_marginStart="13dp"
        android:background="#2c3039"
        android:src="@drawable/ic_backward_arrow" />


    <ImageButton

        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview"
        android:layout_alignParentEnd="true"
        android:background="#2c3039"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_attention_sign_outline" />


    <ImageButton

        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listview"
        android:layout_toStartOf="@+id/image3"
        android:layout_marginRight="20dp"
        android:background="#2c3039"
        android:src="@drawable/ic_mathematical_addition_sign" />




</RelativeLayout>



